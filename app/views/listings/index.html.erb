<div class="jumbotron">
  <h1>Handcrafted Items from <br> Around the World</h1>
  <h2>Discover One-of-a-Kind Items</h2>
</div>

<div class="center"> 
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "Sold By #{listing.user.name}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<!-- Do not need multiple class="col-md-3" because we are using a loop to cycle our listings -->
<!-- Our HTML table relies on a loop, the listings.each do |listing| part -->
<!-- number_to_currency to convert numbers to dollars in Ruby -->
<!-- for each listing, we take the user of that listing and pull the name of that user -->
 
<br>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link", data: { no_turbolink: true} %>
<% end %>