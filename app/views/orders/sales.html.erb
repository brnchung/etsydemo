<div class="center">
  <h2>Your Sales Page</h2>
</div>

<table class="table table-striped table-bordered  ">
  <tr>
    <th class="center">Image</th>
    <th class="center">Item</th>
    <th class="center">Price</th>
    <th class="center">Customer</th>
    <th class="center">Date Sold</th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td class="center"><%= image_tag order.listing.image.url(:thumb) %></td>
      <td class="center"><%= order.listing.name %></td>
      <td class="center"><%= number_to_currency(order.listing.price) %></td>
      <td class="center"><%= order.buyer.name %></td>
      <td class="center"><%= order.created_at.strftime("%B %-d, %Y") %></td>
    </tr>
  <% end %>
</table>

<!-- Do not need multiple class="col-md-3" because we are using a loop to cycle our listings -->
<!-- Our HTML table relies on a loop, the listings.each do |listing| part -->
<!-- number_to_currency to convert numbers to dollars in Ruby -->
<!-- for each listing, we take the user of that listing and pull the name of that user -->
 
<br>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link", data: { no_turbolink: true} %>
<% end %>

